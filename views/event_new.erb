<form class="middle-form" method="post" action="new">
  <h2>Create Event</h2>
  </br>

  <label> Type new event name </label>
  </br>
  <input type="text" required="required" name="name" />
  </br>
  </br>

  <label> Type the date for the new event </label>
  </br>
  <input type="date" required="required" name="date" />
  </br>
  </br>

  <input class="button" type="submit" value="Create event"/>
  <a href="/user/<%= @user_id %>/events"><input class="button" type="button" value="Cancel"/></a>
</form>
